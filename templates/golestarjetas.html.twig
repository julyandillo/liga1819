{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="goals col">
                <div>
                    <h2>Goles</h2>
                </div>
                <div >
                    {% for gol in goles %}
                        <div class="col-12 row">
                            <div class="col-9 {% if loop.index % 2 == 0 %}bg-light{% endif %}">{{ gol.nombre }} ({{ gol.equipo }})</div>
                            <div class="col-3 {% if loop.index % 2 == 0 %}bg-light{% endif %}">{{ gol.goles }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="cards col">
                <div class="row">
                    <h2>Tarjetas</h2>
                </div>
                <div>
                    {% for tarjeta in tarjetas %}
                        <div class="col-12 row">
                            <div class="col-9 {% if loop.index % 2 == 0 %}bg-light{% endif %}">{{ tarjeta.nombre }} ({{ tarjeta.equipo }})</div>
                            <div class="col-3 {% if loop.index % 2 == 0 %}bg-light{% endif %}">{{ tarjeta.tarjetas }}</div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}